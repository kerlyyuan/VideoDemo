<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@drawable/bg_video_listab">

        <RadioButton
            android:id="@+id/rb_attention"
            style="@style/video_tab"
            android:drawableTop="@drawable/videolist_attention_selector"
            android:text="视频" />

        <RadioButton
            android:id="@+id/rb_global"
            style="@style/video_tab"
            android:drawableTop="@drawable/videolist_global_selector"
            android:text="直播" />

        <RadioButton
            android:id="@+id/rb_mylist"
            style="@style/video_tab"
            android:drawableTop="@drawable/videolist_mylist_selector"
            android:text="会员" />

    </RadioGroup>
</LinearLayout>
